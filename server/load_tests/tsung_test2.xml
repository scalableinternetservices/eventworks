<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/usr/local/share/tsung/tsung-1.0.dtd" [] >
<tsung loglevel="notice">
  <!-- Client side setup -->
  <clients>
    <client host="localhost" use_controller_vm="true" maxusers='15000'/>
  </clients>

  <!-- Server side setup -->
  <servers>
    <server host="localhost" port="3000" type="tcp"></server>
  </servers>


  <load>
    <arrivalphase phase="1" duration="10" unit="second">
      <users arrivalrate="1" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="2" duration="10" unit="second">
      <users arrivalrate="40" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="3" duration="10" unit="second">
      <users arrivalrate="80" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="4" duration="20" unit="second">
      <users arrivalrate="160" unit="second"></users>
    </arrivalphase>
  </load>

  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="global_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="http-example" probability="100" type="ts_http">
      <request>
      <!-- start out at the dashboard. -->
        <http url='/' version='1.1' method='GET'></http>
      </request>
       <!-- wait for up to 2 seconds, user is looking at options/page -->
      <thinktime value="2" random="true"></thinktime>

      <!-- create a random number to make a unique email name -->
      <setdynvars sourcetype="random_number" start="1000" end="9999999">
        <var name="email" />
      </setdynvars>

      <!-- create a random number to make a unique name -->
      <setdynvars sourcetype="random_number" start="1000" end="9999999">
        <var name="name" />
      </setdynvars>

      <!-- Sign up first, as a user would do.  -->
      <request subst="true">
        <http
          url='/app/account/signup'
          version='1.1'
          method='POST'
          contents=''
          contents='community%5Bname%5D=community_name_%%_random_community_name%%&amp;commit=Create+Community'>
        </http>
      </request>

      <!-- wait for up to 2 seconds, user is filling out new community form -->
      <thinktime value="2" random="true"></thinktime>
    </session>
  </sessions>
</tsung>